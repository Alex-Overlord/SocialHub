<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pixelperfect.socialhub">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SocialHub">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterUser"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ForgotPassword"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".NetworksActivity"
            android:parentActivityName=".MainActivity" />
        <activity android:name=".ProfileActivity"
            android:parentActivityName=".NetworksActivity" />
        <activity android:name=".CreateNetworkActivity"
            android:parentActivityName=".NetworksActivity" />
    </application>

</manifest>